{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "hostRules": [
    {
      "matchHost": "api.github.com",
      "concurrentRequestLimit": 1,
      "maxRequestsPerSecond": 8
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        "group:allNonMajor"
      ],
      "automerge": true
    }
  ]
}
